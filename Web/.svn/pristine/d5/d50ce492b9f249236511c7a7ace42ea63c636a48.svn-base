/* CSS Document */

.main-menu {
	color: #C0C0C0;
	font-family: century gothic;
	font-size: 10pt;
	height: 17px;
	background-image: url('../images/bg_menu.jpg');
	text-align: center;
	padding: 10px;
}

.main-menu a {
	color: #5688B9;
	font-weight: bold;
	text-decoration: none;
}

.main-menu a:hover {
	color: #000000;
	font-weight: bold;
}

.menu-item {
	padding: 0px 5px;
}

.logo {
	padding: 10px;
}

.login {
	color: #CDC8AB;
	position: relative;
    float: right;
    margin-right: 6px;
    margin-top: 6px;
}

.bookmark {
	color: #CDC8AB;
	position: relative;
    float: right;
    margin-right: 6px;
    margin-top: 6px;
}

.bookmark-main {
	color: #CDC8AB;
    float: right;
    margin-right: 6px;
    margin-top: 50px;
}
.tbl-sidecolor{
	background:#FFF;
}
.logo-text {
	display: inline;
	/*color: #CDC8AB;*/
	color:#FFF;
	font-size: 48px;
	padding-left: 20px;
}

.site-text {
	padding: 20px 20px;	
	color: #000;
	font-size: 11pt;
	text-indent: 50px;
}

.body-text {
	padding: 40px 0px;
	color: #000;
}

.body-text p {
	color: #000;
	font-family: "Century Gothic";
	font-size: 10pt;
	line-height: 175%;
}

.body-text .p1 {
	font-size: 12pt; 
	font-weight: bold;
}

.body-text .p3 {
	color: #000;
}

.error {
	color:yellow; letter-spacing:2px; font-size:.8em;	
}

.adinfobackdrop {
	position:relative;
	margin-left:auto;
	margin-right:auto;
	height:100%;
	width:100%px;
	display:block;
	opacity:.50;
	filter:alpha(opacity=0);
	background-color:#000;
	z-index:100;
}

.adinfobox {
	position:relative;
	margin-left:auto;
	margin-right:auto;
	height:200px;
	width:250px;
	display:block;
	background-color:#FFFFFF;
	z-index:101;
}

table td {
	color:#000 !important;
}

input.buttonGlowMenu {
	-moz-box-shadow: 0px 0px 10px Green;
	-webkit-box-shadow: 0px 0px 10px Green;
	box-shadow: 0px 0px 10px Green;
}

.tblAuction {
	font-size: 12px;
}

.hdrAuction {
	background-color:#616362;
	color:#CDC8AB;
	text-align:center;
	height:50px;
	font-size:14px;
	font-weight:bold;
}

.hdrAuction th {
	color:#CDC8AB;
}

.tdAuctionCategory {
	text-align:left;
	font-size:14px;
	font-weight:bold;
}

.auctionItemCount {
	font-size:10px;
	font-weight:normal;
}
